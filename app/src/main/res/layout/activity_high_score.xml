<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HighScoreActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP 6"
            android:textColor="@color/orange"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tv_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="top 1"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="top 1"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_top3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="top 1"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_top4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="top 1"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_top5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="top 1"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_top6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="top 1"
            android:textColor="@color/orange"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>